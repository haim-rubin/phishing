{
    "version": "0.2.0",  
    "configurations": [
        {
          "type": "node",
          "request": "attach",
          "name": "Attach to Node",
          "protocol": "inspector",
          "sourceMaps": true,
          "address": "localhost",
          "port": 9229,
          "smartStep": true,
          "outFiles": [
            "${workspaceRoot}/build/**/*.js"
          ]
        },
        {
          "type": "chrome",
          "request": "attach",
          "name": "Attach to Chrome",
          "port": 9222,
          "sourceMaps": true,
          "webRoot": "${workspaceRoot}/src",
          "sourceMapPathOverrides": {
          "webpack:///src/*": "${webRoot}/*"
          },
          "outFiles": [
            "${workspaceRoot}/build/**/*.js"
          ]
        }
      ]
}